{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "MetaKey",
  "version": "0.1.0",
  "identifier": "msv",
  "build": {
	"frontendDist": "frontend"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Tauri",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
	      "enable": true,
	      "scope": ["*/**"]
	}
    }
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.ico"],
    "resources": ["frontend/*"],
    "targets": "all"
  }
}
